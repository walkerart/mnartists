function _get_role($user = NULL) {
    if (!$user) {
        global $user;
    }

    if ($user->roles[ARTIST_ROLE]) {
        return 'artist';
    } else if ($user->roles[ORG_ROLE]) {
        return 'org';
    } else {
        return 'public';
    }
}

function _mnartist_profile_block_visibility() {
    global $user;

    if ((arg(0) == 'user' && $user->uid == arg(1)) ||
        (arg(0) == 'user' && !user_is_logged_in()) ||
        (arg(0) == "node" && in_array(arg(1), array("edit", "add")))
    ) {
        return true;
    }

    return false;
}


