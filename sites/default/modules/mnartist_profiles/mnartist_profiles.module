                {
                    $field_data = field_info_field($data['#field_name']);
                    $privacy = (bool) _profile2_field_privacy_value($field_data['id'], $res_pid);
                    if($privacy != '1')
                    {
                        foreach($data['#items'] as $key => $value)
                        {
                            $fieldset[$data['#field_name']][] = array(
                                'name' => $data['#field_name'],
                                'value' => $data[$key]
                            );
                        }
                    }
                }
            }
